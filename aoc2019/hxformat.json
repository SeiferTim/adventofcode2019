{
  "excludes": ["\\assets", "/assets", "\\node_modules", "/node_modules"],
  "indentation": {
    "character": "    "
  },
  "lineEnds": {
    "rightCurly": "both",
    "emptyCurly": "noBreak",
    "leftCurly": "both",
    "blockCurly": {
      "leftCurly": "both",
      "emptyCurly": "noBreak",
      "rightCurly": "both"
    },
    "anonTypeCurly": {
      "rightCurly": "both",
      "leftCurly": "both",
      "emptyCurly": "noBreak"
    },
    "objectLiteralCurly": {
      "leftCurly": "after"
    }
  },
  "sameLine": {
    "ifBody": "next",
    "ifElse": "next",
    "doWhile": "next",
    "tryBody": "next",
    "tryCatch": "next"
  }
}
